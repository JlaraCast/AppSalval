<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.MainPage">
    <!-- CORREGIDO -->

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Lista de Formularios" FontSize="24" />

            <!-- ✅ Aquí declaramos el ListView con el x:Name="ListaFormularios" -->
            <ListView x:Name="ListaFormularios">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="10">
                                <Label Text="{Binding Numero}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding NombreDescripcion}" FontSize="18" Margin="10,0,0,0"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
