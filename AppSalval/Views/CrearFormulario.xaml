<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.CrearFormulario"
             Title="CrearFormulario">

    <ScrollView>
        <VerticalStackLayout Spacing="10" >

            <Grid Margin="30,20,30,40" Padding="40,0,0,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Source="usuario.png"
                        HeightRequest="60"
                        Aspect="AspectFit"
                        Margin="0,20,0,30" 
                        HorizontalOptions="Start"
                        SemanticProperties.Description="dot net bot in a hovercraft number nine" 
                    
                    />
                <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Administrador" 
                        FontSize="Title"
                        Margin="80,33,0,0"
                        TextColor="#5ac1c0"
                    />


            </Grid>

            <Border Stroke="Green" StrokeThickness="3" Padding="0" Margin="30,0,30,30" >
                <Grid Margin="0,0,30,0" Padding="20,0,0,30">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"
                    />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Crear Formulario" 
                        FontSize="45"
                        Margin="0,0,0,40"
                        TextColor="#000000"
                    />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Titulo del Formulario" 
                        FontSize="Title"
                        Margin="20,0,0,40"
                        TextColor="#000000"
                    />



                    <Entry
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Placeholder="Ingrese el título"
                        HorizontalOptions="Fill"
                        Margin="40,0,40,40"
                        TextColor="#000000"
                        Text="{Binding Titulo}"
                    />

                    <Label
                         Grid.Row="2"
                         Grid.Column="0"
                         Text="Descripción del formulario" 
                         FontSize="Title"
                         Margin="20,0,0,40"
                         TextColor="#000000"
                     />

                    <Entry
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Placeholder="Ingrese Descripcion"
                        HorizontalOptions="Fill"
                        Margin="40,0,40,40"
                        TextColor="#000000"
                        Text="{Binding Descripcion}"
                    />


                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="Fecha inicio del formulario" 
                        FontSize="Title"
                        Margin="20,0,0,40"
                        TextColor="#000000"
                    />

                    <DatePicker
                        Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="Fill"
                        Margin="40,0,40,40"
                        TextColor="#000000"
                        Date="{Binding FechaInicio}"
                    />

                    <Label
                         Grid.Row="4"
                         Grid.Column="0"
                         Text="Fecha finalizacion del formulario" 
                         FontSize="Title"
                         Margin="20,0,0,0"
                         TextColor="#000000"
                    />

                    <DatePicker
                         Grid.Row="4"
                         Grid.Column="1"
                         Grid.ColumnSpan="2"
                         HorizontalOptions="Fill"
                         Margin="40,0,40,40"
                         TextColor="#000000"
                        Date="{Binding FechaFin}"
                    />


                    <Label
                        Grid.Row="5"
                        Grid.Column="0"
                        Text="Habilitado" 
                        FontSize="Title"
                        Margin="20,0,0,30"
                        TextColor="#000000"
                    />

                    <Switch
                        Grid.Row="5"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="Start"
                        Margin="160,-25,40,0"
                        IsToggled="{Binding Habilitado}"
                    />

                </Grid>
            </Border>

            <Grid Margin="0,0,0,20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>


                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="Requiere datos personales" 
                    FontSize="Title"
                    Margin="80,0,0,0"
                    TextColor="#000000"
                />


                <CheckBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="Start"
                    Margin="40,-5,0,0"
                    IsChecked="{Binding RequiereDatosPersonales}"
                />


            </Grid>



            <Border Stroke="Green" StrokeThickness="3" Padding="0" Margin="30,0,30,30" >

                <Grid Margin="0,0,30,0" Padding="20,0,0,30">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"
                        />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Label
                             Grid.Row="0"
                             Grid.Column="0"
                             Text="Lista Preguntas" 
                             FontSize="60"
                             Margin="0,0,0,40"
                             TextColor="#000000"
                        />

                    <Border Stroke="Green" StrokeThickness="3" Padding="0" Margin="30,0,30,30" Grid.Row="1" Grid.ColumnSpan="2" HeightRequest="100">

                        <Grid Margin="0,0,30,0" Padding="20,0,0,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Text="Pregunta" 
                                FontSize="30"
                                Margin="0,0,0,40"        
                           />

                            <CheckBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                HorizontalOptions="Start"
                                Margin="40,-5,0,30"                
                                IsChecked="{Binding CheckboxPregunta}"
                            />
                            
                            <!-- Las preguntas debne de ir aqui-->



                        </Grid>
                    </Border>

                </Grid>


            </Border>
			
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Button 
					Text="Cancelar" 
                    BackgroundColor="Green"
                    Command="{Binding BtnCancelar}"
					
                 />
                
               <Button 
					Text="Aceptar" 
                    BackgroundColor="LightBlue"
                    Command="{Binding BtnAceptar}"
					
                />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>