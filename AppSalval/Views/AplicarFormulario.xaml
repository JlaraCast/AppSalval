<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.AplicarFormulario"
             Title="Formulario">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- TÃ­tulo del Formulario -->
            <Label x:Name="FormularioTitulo"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   Text="Formulario"/>

            <!-- Lista de preguntas con sus opciones -->
            <CollectionView x:Name="ListaPreguntas"
                            ItemsSource="{Binding .}"
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#F5F5F5"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5">
                            <VerticalStackLayout>

                                <!-- Pregunta -->
                                <Label Text="{Binding TextPregunta}"  
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       Margin="0,5,0,10"/>

                                <!-- Opciones de respuesta -->
                                <StackLayout Padding="5"
                                             BindableLayout.ItemsSource="{Binding OpcionesRespuesta}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout Orientation="Horizontal">
                                                <RadioButton Content="{Binding NombreOpcion}" 
                                                             GroupName="{Binding IdPregunta}"/>
                                            </StackLayout>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </StackLayout>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="20"
                                   HorizontalOptions="Center">
                <Button Text="Cancelar"
                        BackgroundColor="Red"
                        TextColor="White"
                        Clicked="OnCancelarClicked"
                        WidthRequest="120"/>
                <Button Text="Enviar"
                        BackgroundColor="Green"
                        TextColor="White"
                        Clicked="OnEnviarClicked"
                        WidthRequest="120"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
