<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.AplicarFormulario"
             Title="Aplicar Formulario">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- TÃ­tulo del Formulario -->
            <Label x:Name="FormularioTitulo"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="SteelBlue"
                   HorizontalOptions="Center"/>

            <!-- Lista de preguntas -->
            <ListView x:Name="ListaPreguntas"
                      ItemsSource="{Binding _preguntas}"
                      HasUnevenRows="True"
                      SeparatorVisibility="None">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Padding="10" BackgroundColor="White" CornerRadius="10">
                                <VerticalStackLayout>

                                    <!-- Pregunta -->
                                    <Label Text="{Binding TextoPregunta}"
                                           FontSize="18"
                                           TextColor="Black"
                                           FontAttributes="Bold"/>

                                    <!-- Opciones de respuesta -->
                                    <ListView ItemsSource="{Binding Opciones}"
                                              HasUnevenRows="True"
                                              SeparatorVisibility="None">

                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <Grid Padding="5">
                                                        <Label Text="{Binding TextoOpcion}" FontSize="16" TextColor="Gray"/>
                                                    </Grid>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>

                                    </ListView>

                                </VerticalStackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="Enviar" BackgroundColor="Green" TextColor="White" Clicked="OnEnviarClicked"/>
                <Button Text="Cancelar" BackgroundColor="Red" TextColor="White" Clicked="OnCancelarClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
