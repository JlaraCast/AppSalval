<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.CreacionPreguntas"
             Title="CreacionPreguntas">
    <ScrollView>
        <VerticalStackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Botón para desplegar opciones -->
                <Button Text="Opciones"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                        Margin="20,10,0,0">
                    <!--Clicked="OnOpcionesClicked"-->
                </Button>
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="Administrador" 
                    FontSize="Title"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    TextColor="MidnightBlue"
                     Margin="0,20,0,0"/>
                 <Button Text="Menu"
                     Grid.Row="0"
                     Grid.Column="2"
                     HorizontalOptions="End"
                     VerticalOptions="Start"
                         Margin="0,10,20,0">
                     <!--Clicked="OnOpcionesClicked"-->
                 </Button>
                
                <!-- Contenido principal de la página -->
                <ContentView Grid.Row="1" Grid.ColumnSpan="3" VerticalOptions="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="80"/>
                            
                        </Grid.RowDefinitions>
                        <Label Text="Coloque la pregunta:"
                           Grid.Column="0"
                           Grid.Row="0"
                           FontSize="Medium"
                           TextColor="MidnightBlue" 
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                               Margin="30,0,0,0"/>

                        <Entry x:Name="entryPregunta" 
                           Grid.Column="1"
                           Grid.Row="0"
                           Placeholder="Ingresa la pregunta"
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"
                           Margin="30,0,0,0"
                           Keyboard="Text"/>
                        
                        <Label Text="Tipo de Pregunta"
                           Grid.Column="0"
                           Grid.Row="1"
                           FontSize="Medium"
                           TextColor="MidnightBlue" 
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                               Margin="30,0,0,0"/>

                        <Picker x:Name="pickerTipoPregunta"
                            Grid.Column="1"
                            Grid.Row="1"
                            HorizontalOptions="StartAndExpand"
                            VerticalOptions="Center"
                            Margin="10,0,0,0"
                            TextColor="Gray"
                            BackgroundColor="LightGreen">
                            
                            <Picker.Items>
                                <x:String>Selección Múltiple</x:String>
                                <x:String>Selección Única</x:String>
                            </Picker.Items>
                        </Picker>
                        <Label Text="Habilitado"
                           Grid.Column="2"
                           Grid.Row="1"
                           FontSize="Medium"
                           TextColor="MidnightBlue" 
                           HorizontalOptions="StartAndExpand"
                           VerticalOptions="Center"/>

                        <CheckBox x:Name="checkBoxObligatorio"
                            Grid.Column="3"
                            Grid.Row="1"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                                  Margin="20,0,0,0"
                            IsChecked="{Binding IsObligatorio}"/>
                        
                        <!-- Label para respuestas -->
                        <Label Text="Respuestas:"
                           Grid.Column="0"
                           Grid.Row="2"
                           FontSize="Medium"
                           TextColor="MidnightBlue" 
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                               Margin="30,0,0,0"/>
                        
                        <!-- Lista de TextFields de respuestas con botones para eliminar -->
                        <CollectionView x:Name="collectionView" Grid.Row="3" Grid.ColumnSpan="4" ItemsSource="{Binding OpcionesRespuesta}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Entry Text="{Binding NombreOpcion}" Grid.Column="0" Placeholder="Ingresa la opción de respuesta"/>
                                        <Button Text="Eliminar" Grid.Column="1" Command="{Binding Path=BindingContext.EliminarOpcionRespuestaCommand, Source={x:Reference collectionView}}" CommandParameter="{Binding .}"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Button Text="Agregar Respuesta" Grid.Row="4" Grid.ColumnSpan="4" Command="{Binding AgregarOpcionRespuestaCommand}"/>
                        
                        <!-- Sección de recomendaciones -->
                        <Label Text="Recomendaciones:"
                           Grid.Column="0"
                           Grid.Row="5"
                           FontSize="Medium"
                           TextColor="MidnightBlue" 
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                               Margin="30,0,0,0"/>
                        <CollectionView x:Name="collectionViewRecomendaciones" Grid.Row="6" Grid.ColumnSpan="4" ItemsSource="{Binding Recomendaciones}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Entry Text="{Binding Texto}" Grid.Column="0" Placeholder="Ingresa la recomendación"/>
                                        <Button Text="Eliminar" Grid.Column="1" Command="{Binding Path=BindingContext.EliminarRecomendacionCommand, Source={x:Reference collectionViewRecomendaciones}}" CommandParameter="{Binding .}"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Button Text="Agregar Recomendación" Grid.Row="7" Grid.ColumnSpan="4" Command="{Binding AgregarRecomendacionCommand}"/>
                        
                        <!-- Sección de factores de riesgo -->
                        <Label Text="Factores de Riesgo:"
                           Grid.Column="0"
                           Grid.Row="8"
                           FontSize="Medium"
                           TextColor="MidnightBlue" 
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                               Margin="30,0,0,0"/>
                        <CollectionView x:Name="collectionViewFactoresRiesgo" Grid.Row="9" Grid.ColumnSpan="4" ItemsSource="{Binding FactoresRiesgo}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Entry Text="{Binding Texto}" Grid.Column="0" Placeholder="Ingresa el factor de riesgo"/>
                                        <Button Text="Eliminar" Grid.Column="1" Command="{Binding Path=BindingContext.EliminarFactorRiesgoCommand, Source={x:Reference collectionViewFactoresRiesgo}}" CommandParameter="{Binding .}"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Button Text="Agregar Factor de Riesgo" Grid.Row="10" Grid.ColumnSpan="4" Command="{Binding AgregarFactorRiesgoCommand}"/>
                        <Button Text="Cancelar" 
                            Grid.Row="11" 
                            Grid.Column="1" 
                            HorizontalOptions="Start" 
                            VerticalOptions="Center" 
                            Margin="10" 
                            BackgroundColor="Red" 
                            TextColor="White"/>

                        <Button Text="Guardar" 
                            Grid.Row="11" 
                            Grid.Column="1" 
                            HorizontalOptions="End" 
                            VerticalOptions="Center" 
                            Margin="10" 
                            BackgroundColor="Green" 
                            TextColor="White"/>
                        <!-- Botones de Cancelar y Guardar -->
                        

                    </Grid>
                </ContentView>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>