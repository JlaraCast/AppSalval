<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.RecomPage"
             >
    <VerticalStackLayout Padding="20">

        <Grid ColumnDefinitions="Auto, *, Auto" Padding="20">
            <!-- Imagen del usuario -->
            <Image Grid.Column="0" Source="user_icon.png" WidthRequest="40" HeightRequest="40"/>

            <!-- Nombre del usuario -->
            <Label Grid.Column="1" Text="Desarrollador" FontSize="18" Padding="15" VerticalOptions="Center" TextColor="#25587b"/>

            <Button Grid.Column="2"
                Text="Volver"
                BackgroundColor="#25587b"
                Margin="10"
                Clicked="volver"
                HeightRequest="50"
                WidthRequest="180"
                HorizontalOptions="End"/>
        </Grid>

        <!-- Campo de búsqueda -->
        <HorizontalStackLayout Spacing="0" VerticalOptions="Start" Margin="5">
            <Label Text="Buscar recomendación:" FontSize="14" TextColor="#25587b" Padding="10"/>
            <Entry Placeholder="Buscar..." WidthRequest="200" Text="{Binding SearchText, Mode=TwoWay}"/>
        </HorizontalStackLayout>

        <!-- Botones de acción -->
        <HorizontalStackLayout Spacing="60" Margin="10">
            <Button Text="Crear recomendación" 
                 BackgroundColor="#58c798" 
                 TextColor="White" 
                 CornerRadius="10" 
                 Command="{Binding NavigateToRecomFormCommand}"/>

            <!-- Picker para seleccionar el criterio de orden -->
            <Picker Title="Ordenar por:" 
                 SelectedItem="{Binding OrdenActual, Mode=TwoWay}"
                 WidthRequest="150">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Nombre</x:String>
                        <x:String>ID</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="Ordenar" 
                 BackgroundColor="#25587b" 
                 TextColor="White" 
                 CornerRadius="10"
                 Command="{Binding OrdenarCommand}"/>
        </HorizontalStackLayout>

        <!-- Lista de recomendaciones -->
        <CollectionView ItemsSource="{Binding Recomendaciones}" Margin="10" HeightRequest="400">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="White">
                        <VerticalStackLayout>

                            <!-- ID de la recomendación -->
                            <Label Text="{Binding IdRecomendacion}" 
                                FontSize="16" 
                                TextColor="Black" 
                                FontAttributes="Bold"/>

                            <!-- Texto de la recomendación -->
                            <Label Text="{Binding TextoRecomendacion}" 
                                FontSize="14" 
                                TextColor="Black"/>

                            <!-- Estado (Activo/Inactivo) -->
                            <Label Text="{Binding EstadoTexto}" 
                                FontSize="14" 
                                TextColor="Gray"/>

                            <!-- Botones de acción -->
                            <HorizontalStackLayout Spacing="10">
                                <Button Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCommand}"
                                     CommandParameter="{Binding}"
                                     BackgroundColor="Transparent"
                                     Padding="0"
                                     WidthRequest="30"
                                     HeightRequest="30">
                                    <Button.ImageSource>
                                        <FileImageSource File="edit_icon.png"/>
                                    </Button.ImageSource>
                                </Button>

                                <Button Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                     CommandParameter="{Binding}"
                                     BackgroundColor="Transparent"
                                     Padding="0"
                                     WidthRequest="30"
                                     HeightRequest="30">
                                    <Button.ImageSource>
                                        <FileImageSource File="delete_icon.png"/>
                                    </Button.ImageSource>
                                </Button>
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

