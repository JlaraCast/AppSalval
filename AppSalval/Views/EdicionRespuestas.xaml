<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.EdicionRespuestas"
             Title="Editar Respuesta">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="ID Respuesta" FontSize="16" />
            <Entry x:Name="EntryIdRespuesta" Placeholder="Ingrese el ID de la respuesta" />

            <Label Text="ID Formulario" FontSize="16" />
            <Entry x:Name="EntryIdFormulario" Placeholder="Ingrese el ID del formulario" />

            <Label Text="Identificación Encuestado" FontSize="16" />
            <Entry x:Name="EntryIdentificacionEncuestado" Placeholder="Ingrese la identificación del encuestado" />

            <Label Text="Fecha de Respuesta" FontSize="16" />
            <DatePicker x:Name="DatePickerFechaRespuesta" />

            <HorizontalStackLayout Spacing="20">
                <Button Text="Guardar cambios" BackgroundColor="Green" TextColor="White" Clicked="OnSaveChangesClicked"/>
                <Button Text="Cancelar" BackgroundColor="Red" TextColor="White" Clicked="OnCancelClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>