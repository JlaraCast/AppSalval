<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSalval.Views.CambioContrasenaCorreo"
             BackgroundColor="White">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

        <!-- Icono de usuario -->
        <Image Source="user_icon.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center"/>

        <!-- Título -->
        <Label Text="Ingrese su correo" 
               FontSize="22" 
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"/>

        <!-- Entrada de correo -->
        <Entry x:Name="txtEmail" 
               Placeholder="Correo electrónico" 
               Keyboard="Email"
               FontSize="16"
               HorizontalOptions="Fill"
               WidthRequest="250"
               TextColor="Black"
               BackgroundColor="Transparent"
               HeightRequest="50"
               Margin="20,0"/>

        <!-- Botón Siguiente -->
        <Button Text="Siguiente" 
                BackgroundColor="#80ED99" 
                TextColor="White"
                FontSize="16"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="OnRecoverPasswordClicked"/>

    </VerticalStackLayout>
</ContentPage>


