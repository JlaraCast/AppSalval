<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppSalval.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vista="clr-namespace:AppSalval.Views"
     xmlns:local="clr-namespace:AppSalval"
    xmlns:views="clr-namespace:AppSalval.Views" 
    Shell.FlyoutBehavior="Disabled"
    Title="AppSalval"
    >

    <ShellContent Title="LoginPage" Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent
        Title="Formularios"
        ContentTemplate="{DataTemplate views:Formularios}"
        Route="Formularios" />
  

    <ShellContent
    Title="InicioAdmin"
    ContentTemplate="{DataTemplate vista:InicioAdmin}"
    Route="InicioAdmin" />
    <ShellContent
    Title="GestionUsuarioss"
    ContentTemplate="{DataTemplate vista:GestionUsuarios}"
    Route="GestionUsuarios" />
    <ShellContent
    Title="InicioDesarrollador"
    ContentTemplate="{DataTemplate vista:InicioDesarrollador}"
    Route="InicioDesarrollador" />  
    <ShellContent
    Title="CrearFormulario"
    ContentTemplate="{DataTemplate vista:CrearFormulario}"
    Route="CrearFormulario" />
    <ShellContent
    Title="GestionPreguntas"
    ContentTemplate="{DataTemplate vista:GestionPreguntas}"
    Route="GestionPreguntas"/>


    <ShellContent
    Title="InicioEncuestador"
    ContentTemplate="{DataTemplate vista:InicioEncuestador}"
    Route="InicioEncuestador" />

</Shell>
