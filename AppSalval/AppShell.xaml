<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppSalval.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vista="clr-namespace:AppSalval.Views"
     xmlns:local="clr-namespace:AppSalval"
    xmlns:views="clr-namespace:AppSalval.Views" 
    Shell.FlyoutBehavior="Flyout"
    Title="AppSalval">


    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}" 
        Route="MainPage" />
    <ShellContent
    Title="GestionFormularios"
    ContentTemplate="{DataTemplate vista:GestionFormularios}"
    Route="GestionFormularios" />
    <ShellContent
     Title="GestionRespuestas"
     ContentTemplate="{DataTemplate vista:GestionRespuestas}"
     Route="GestionRespuestas" />
    <ShellContent
     Title="CreacionPreguntas"
     ContentTemplate="{DataTemplate vista:CreacionPreguntas}"
     Route="CreacionPreguntas" />
    <ShellContent
    Title="InicioAdmin"
    ContentTemplate="{DataTemplate vista:InicioAdmin}"
    Route="InicioAdmin" />
    <ShellContent
    Title="InfoPersonal"
    ContentTemplate="{DataTemplate vista:InfoPersonal}"
    Route="InfoPersonal" />
    <ShellContent
    Title="ResultadosUsuario"
    ContentTemplate="{DataTemplate vista:ResultadosUsuario}"
    Route="ResultadosUsuario" />
    <ShellContent
    Title="GestionUsuarios"
    ContentTemplate="{DataTemplate vista:GestionUsuarios}"
    Route="GestionUsuarios" />
    
</Shell>

